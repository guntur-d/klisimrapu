{
  "name": "simkpd",
  "version": "1.0.0",
  "description": "Sistem Informasi Manajemen Kinerja Perangkat Daerah",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "npm run build-js-min && npm run build-css",
    "devel": "npm run wj & npm run wc",
    "bc": "start npm run wj && start npm run wc",
    "build-js": "node esbuild.config.js",
    "build-js-min": "esbuild src/index.js --bundle --outfile=public/app.js --minify",
    "build-css": "postcss ./src/index.css -o ./public/app.css",
    "wj": "node esbuild.config.js --watch",
    "wc": "postcss ./src/index.css -o ./public/app.css --watch",
    "go": "powershell -NoProfile -ExecutionPolicy Bypass -File ./run-log.ps1",
    "start": "node server.js",
    "gen": "drizzle-kit generate",
    "mig": "drizzle-kit migrate",
    "all": "npm run bc",
    "create-superuser": "node scripts/create-super-user.js",
    "init-budget-years": "node scripts/init-budget-years.js",
    "init-master-data": "node scripts/init-master-data.js",
    "import-csv": "node scripts/import-csv.js docs/Urusan_Cleaned_Spacing.csv",
    "import-urusan": "node scripts/run-urusan-import.js",
    "import-urusan-direct": "node scripts/import-urusan-hierarchical.js",
    "cleanup-urusan": "node scripts/cleanup-urusan-data.js",
    "verify-urusan": "node scripts/verify-urusan-import.js"
  },
  "keywords": [
    "simrapu",
    "anggaran",
    "pu",
    "mongoose"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/static": "^7.0.4",
    "bcryptjs": "^2.4.3",
    "csv-parser": "^3.2.0",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "multer": "^2.0.2",
    "remixicon": "^4.6.0",
    "sharp": "^0.34.4",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "dotenv": "^17.2.3",
    "esbuild": "^0.23.0",
    "esbuild-plugin-alias": "^0.2.1",
    "esbuild-svg": "^1.0.3",
    "mithril": "^2.3.7",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.1",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.16",
    "tailwindcss-animate": "^1.0.7"
  },
  "engines": {
    "node": "22.x"
  }
}
